{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "../views/**", "outDir": "./dist/views", "watchAssets": true },
      { "include": "../public/css/**", "outDir": "./dist/public", "watchAssets": true },
      { "include": "../public/assets/**", "outDir": "./dist/public", "watchAssets": true }
    ]
  }
}
